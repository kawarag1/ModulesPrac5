<Page x:Class="ModulesPrac5.Pages.OrderDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModulesPrac5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="OrderDetailsPage" Background="White">

    <Grid>
        <ListView x:Name="LVOrders">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="1000">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding Products.ImageURL, FallbackValue = '/Images/default.png', TargetNullValue = '/Images/default.png'}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Products.Name, StringFormat = 'Название: {0}'}" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Segoe UI"/>
                        <TextBlock Grid.Column="2" Text="{Binding PriceAtOrder, StringFormat= 'Цена: {0}₽'}" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Segoe UI"/>
                        <TextBlock Grid.Column="3" Text="{Binding Quantity, StringFormat= 'Количество: {0}'}" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Segoe UI"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
