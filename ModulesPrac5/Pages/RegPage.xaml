<Page x:Class="ModulesPrac5.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModulesPrac5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="RegPage" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин" FontFamily="Segoe UI" FontSize="20"/>
            <TextBox x:Name="loginbox" Height="30" Width="340" FontFamily="Segoe UI" FontSize="20"/>
            <TextBlock Text="Электронная почта" FontFamily="Segoe UI" FontSize="20"/>
            <TextBox x:Name="emailbox" Height="30" Width="340" FontFamily="Segoe UI" FontSize="20"/>
            <TextBlock Text="Пароль" FontFamily="Segoe UI" FontSize="20"/>
            <PasswordBox x:Name="pwdbox" Height="30" Width="340" FontFamily="Segoe UI" FontSize="20"/>
            <Button x:Name="btnReg" Margin="5 15 5 5" Content="Регистрация" Click="btnReg_Click" FontFamily="Segoe UI" FontSize="20" Background="#67BA80"/>
        </StackPanel>
    </Grid>
</Page>
