<Page x:Class="ModulesPrac5.Pages.ShopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModulesPrac5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="ShopPage" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Фильтрация по цене" FontFamily="Segoe UI" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
            <ComboBox x:Name="OrderByCost" FontFamily="Segoe UI" FontSize="20" Width="140" Height="30" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" SelectionChanged="OrderByCost_SelectionChanged">
                <ComboBoxItem>
                    <TextBlock Text="По возрастанию цены"/>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="По убыванию цены"/>
                </ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Фильтрация по названию" FontFamily="Segoe UI" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0"/>
            <ComboBox x:Name="OrderByName" FontFamily="Segoe UI" FontSize="20" Width="140" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" SelectionChanged="OrderByName_SelectionChanged">
                <ComboBoxItem>
                    <TextBlock Text="А - Я"/>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="Я - А"/>
                </ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Фильтрация по категориям" FontFamily="Segoe UI" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0"/>
            <ComboBox x:Name="OrderByCategories" FontFamily="Segoe UI" FontSize="20" Width="140" Height="30" Grid.Column="2" Grid.Row="1" SelectionChanged="OrderByCategories_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button x:Name="CartBtn" Background="#67BA80" Content="Корзина" Width="140" Height="30" FontFamily="Segoe UI" FontSize="20" Grid.Column="2" Grid.Row="2" Click="CartBtn_Click"/>
        </Grid>

        <ListView x:Name="LViewItems" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="1000">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding ImageURL, FallbackValue = '/Images/default.png', TargetNullValue = '/Images/default.png'}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Name, StringFormat = 'Название: {0}'}"/>
                        <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat= 'Цена: {0}₽'}"/>
                        <Button x:Name="AddToCart" Content="Добавить в корзину" FontFamily="Segoe UI" FontSize="20" Grid.Column="3" Click="AddToCart_Click"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
