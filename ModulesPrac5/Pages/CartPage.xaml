<Page x:Class="ModulesPrac5.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModulesPrac5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="CartPage" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="CreateOrder" Content="Оформить заказ" FontFamily="Segoe UI" FontSize="20" Width="200" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#67BA80" Click="CreateOrder_Click"/>
        <TextBlock x:Name="CartsSumProdcuts" FontFamily="Segoe UI" FontSize="20" Text="111" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="CartCost" FontFamily="Segoe UI" FontSize="20" Text="111" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,60,0"/>

        <ListView x:Name="LVCarts" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="1000">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <Image Grid.Column="0" Grid.Row="0" Source="{Binding Products.ImageURL, FallbackValue = '/Images/default.png', TargetNullValue = '/Images/default.png'}"/>
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Products.Name, StringFormat = 'Название: {0}'}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Segoe UI" TextWrapping="Wrap"/>
                        <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding Products.Price, StringFormat = 'Цена: {0}₽'}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Segoe UI" TextWrapping="Wrap"/>
                        <TextBlock Grid.Column="3" Grid.Row="0" Text="{Binding Quantity, StringFormat = 'Количество: {0}шт.'}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Segoe UI" TextWrapping="Wrap"/>
                        <Button x:Name="DeleteFromCart" Content="Удаить из корзины" FontFamily="Segoe UI" FontSize="20" Grid.Column="4" Click="DeleteFromCart_Click"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
