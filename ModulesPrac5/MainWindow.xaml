<Window x:Class="ModulesPrac5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModulesPrac5"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#F4E8D3">
            <TextBlock x:Name="Title" Text="111" FontFamily="Segoe UI" HorizontalAlignment="Center" FontSize="24"  VerticalAlignment="Center"/>
            <Button x:Name="BackBtn" Click="BackBtn_Click" FontSize="20" FontFamily="Segoe UI" Background="#67BA80" HorizontalAlignment="Left" VerticalAlignment="Center" Width="180" Height="45" Content="Назад" Margin="15,0,0,0"/>
            <Button x:Name="AuthOrRegBtn" Click="AuthOrRegBtn_Click" FontFamily="Segoe UI" FontSize="20" Background="#67BA80" HorizontalAlignment="Right" VerticalAlignment="Center" Width="180" Height="45" Content="Авторизация" Margin="0,0,15,0"/>
            <Button x:Name="ExitButton" Click="ExitButton_Click" FontFamily="Segoe UI" FontSize="20" Background="#67BA80" HorizontalAlignment="Right" VerticalAlignment="Center" Width="180" Height="45" Content="Выйти" Margin="0,0,15,0" Visibility="Hidden"/>
            <Button x:Name="OrdersButton" Click="OrdersButton_Click" FontFamily="Segoe UI" FontSize="20" Background="#67BA80" HorizontalAlignment="Right" VerticalAlignment="Center" Width="180" Height="45" Content="Заказы" Margin="0,0,210,0" Visibility="Visible"/>
        </Grid>

        <Frame x:Name="FrmMain" Grid.Row="1" ContentRendered="FrmMain_ContentRendered" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
